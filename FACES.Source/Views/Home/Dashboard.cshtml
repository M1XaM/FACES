<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>F.A.C.E.S.</title>
    <link rel="stylesheet" href="~/css/dashboard.css">
    <script src="https://kit.fontawesome.com/da3cee17bc.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/PapaParse/5.3.0/papaparse.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
  </head>
  <body>
    <main>
      <div class="container">
        <div class="grid item1">
          <div class="logo">
            <img src="~/images/logo.png">
          </div>
          <div class="text">
            <p>FACES</p>
          </div>
        </div>
          
        <div class="grid item2">
        </div>
        
        <div class="grid item3">
          <div class="navbar">
            <ul class="button-container">
              <div class="menubuttons">
              <div class="topbuttons">
              <li><button id="btn1" class="toggle-btn topnav menu-btn"><img src="~/images/dashboard.png">&nbsp; Dashboard</button></li>
              <li><button id="btn2" class="toggle-btn topnav menu-btn"><img src="~/images//workflow.png">&nbsp; Workflow</button></li>
            </div>

          </div>
            </ul>
          </div>
        </div>

        <div id="section1" class="content-section show">
          <div class="grid table">
            <div class="custom-body">
              <div class="custom-container">
                <div class="custom-header">Dashboard</div>
                <div class="custom-grid-container">
                  <div class="custom-card">
                    <div class="custom-card-content">
                      <div>
                        <div class="custom-card-header">Total Workflows</div>
                        <div class="custom-value">15</div>
                      </div>
                      <i class="fas fa-sync-alt"></i>
                    </div>
                  </div>
                  <div class="custom-card">
                    <div class="custom-card-content">
                      <div>
                        <div class="custom-card-header">Total Sends</div>
                        <div class="custom-value">108</div>
                      </div>
                      <i class="fas fa-paper-plane"></i>
                    </div>
                  </div>
                  <div class="custom-card">
                    <div class="custom-card-content">
                      <div>
                        <div class="custom-card-header">Email Templates</div>
                        <div class="custom-value">43</div>
                      </div>
                      <i class="fas fa-file-alt"></i>
                    </div>
                  </div>
                  <div class="custom-card">
                    <div class="custom-card-content">
                      <div>
                        <div class="custom-card-header">Total Audience</div>
                        <div class="custom-value">1943</div>
                      </div>
                      <i class="fas fa-users"></i>
                    </div>
                  </div>
                  <div class="custom-recent-workflows custom-card">
                    <div class="custom-card-header">Recent Workflows</div>
                    <table class="custom-table">
                      <thead>
                        <tr>
                          <th>Name</th>

                          <th>Trigger</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>Send Birthday Gift</td>
                          <td><i class="fas fa-clock"></i> Immediate Date</td>
                          <td>Gift</td>
                        </tr>
                        <tr>
                          <td>Anniversary Appreciation</td>
                          <td><i class="fas fa-clock"></i> Immediate Date</td>
                          <td>Email</td>
                        </tr>
                        <tr>
                          <td>Seasonal Promotion Alert</td>
                          <td><i class="fas fa-clock"></i> Immediate Date</td>
                          <td>SMS</td>
                        </tr>
                        <tr>
                          <td>Upcoming Renewal Reminder</td>
                          <td><i class="fas fa-clock"></i> Immediate Date</td>
                          <td>Slack</td>
                        </tr>
                      </tbody>
                    </table>
                    <div class="custom-see-more">
                      <a href="#">See more <i class="fas fa-arrow-right"></i></a>
                    </div>
                  </div>
                  <div class="custom-new-audience custom-card">
                    <div class="custom-card-header">New Audience</div>
                    <ul class="custom-audience-list">
                      <li>
                        <button id="plusButton" class="plus-button" alt="Add">+</button>
                      </li>
                    </ul>
                      <div id="seeMoreLink" class="custom-see-more" style="display: none;">
                        <a href="dashboard_audience.html" id="seeMoreAudienceLink">See more <i class="fas fa-arrow-right"></i></a>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div id="section2" class="content-section show">
          <div class="grid item4">
            <div class="content">
              <h3>Automate customer experience</h3>
              <p>Build unique customer interactions across mobile and web through channels<br>
                like email, push, in-app, and SMS using our visual workflow builder</p>
              <div class="buttons">
                <button id="createWorkflowBtn" class="primary">Create Workflow</button>
                <button class="secondary">Learn More</button>
              </div>
              <div class="extra">
              <button class="WriteEmail">Send Email</button>
            </div>
            </div>
          </div>
        </div>
        
        <!-- Email Modal -->
        <div id="emailModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Compose Email</h3>

            <form>
              <label for="emailSubject">Subject:</label>
              <input type="text" id="emailSubject" name="emailSubject" placeholder="Subject" required>
              
              <label for="emailDescription">Message:</label>
              <textarea id="emailDescription" name="emailDescription" placeholder="Write your message here..." rows="6" required></textarea>
              
              <div class="modal-buttons">
                <button type="submit" class="primary">Send</button>
                <button type="button" class="secondary close">Cancel</button>
              </div>
            </form>
          </div>
        </div>
              <div id="workflowBuilder" class="content-section" style="display: none;">
                <div class="custom2-body">
                  <div class="custom2-container">
                    <h1 class="custom2-title">Create new workflow</h1>
                    <p class="custom2-subtitle">Automated and personalised workflows that cover your needs</p>
                    <form>
                      <label for="name" class="custom2-label">Subject
                      </label>
                      <input type="text" id="name" name="name" class="custom2-input" placeholder="Send birthday gift"></textarea>
                      <label for="description" class="custom2-label">Description</label>
                      <textarea id="description" name="description" class="custom2-textarea" placeholder="Automatically send birthday present"></textarea>
                      <button type="submit" class="custom2-button">Save & Next</button>
                    </form>
                  </div>
                </div>
              </div>
              <div id="customWorkflowSteps" class="custom2" style="display: none;">
                
                <div class="container-custom2">
                    <div class="content-custom2">
                        <h2>Workflow trigger</h2>
                        <div class="categories-custom2">
                            <div class="category-custom2">
                                <div>Categories</div>
                                <div class="dates-button-custom2">
                                    <img src="~/images/dates.png">&nbsp;
                                    Dates
                                </div>
                            </div>
                            <div class="vertical-line-custom2"></div>
                            <div class="dates-custom2">
                                <div class="title-custom2">Dates</div>
                                <div class="date-box-custom2">
                                  <div class="boximage">
                                  <img src="~/images/dates.png">
                                </div>
                                    <div class="text-custom2">
                                        <div class="title-custom2">Important Date</div>
                                        <div class="description-custom2">A plan is set for a specific date.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="custom3-body" id="custom3-body">
              <div class="custom3-container">
                <div class="custom3-header">
                  Workflow Trigger
                  <button id="saveAndSendBtn" class="custom3-button">Save & Send</button>
                </div>
            
                <div class="custom3-content">
                  <!-- Date Setup Section -->
                  <div class="custom3-section custom3-date-setup">
                    <h2>Date Setup</h2>
            
                    <div>
                      <h3>When</h3>
                      <div class="custom3-when-options">
                        <button class="active" id="on-date-btn">On Date</button>
                        <button id="before-date-btn">Before the Date</button>
                        <button id="after-date-btn">After the Date</button>
                      </div>
            
                      <h3>At</h3>

            
                      <div class="custom3-time-inputs">
                        <input maxlength="2" type="text" value="12" />
                        <input maxlength="2" type="text" value="00" />
                        <input maxlength="2" type="text" value="00" />
                        <select>
                          <option>AM</option>
                          <option selected>PM</option>
                        </select>
            
                        <div class="custom3-date-picker">
                          <input id="date-picker" placeholder="Pick a date" type="text" />
                          <i class="far fa-calendar-alt"></i>
                        </div>
                      </div>
            
                      <h3>Frequency</h3>
                      <div class="custom3-frequency-options">
                        <div>
                          <input checked id="once" name="frequency" type="radio" />
                          <label for="once">Once (triggers one time on the date)</label>
                        </div>
            
                        <div>
                          <input id="monthly" name="frequency" type="radio" />
                          <label for="monthly">Monthly (triggers every month starting on the date)</label>
                        </div>
            
                        <div>
                          <input id="yearly" name="frequency" type="radio" />
                          <label for="yearly">Yearly (triggers every year starting on the date)</label>
                        </div>
                      </div>
                    </div>
                  </div>
                           

                  <div class="custom3-section custom3-audience">
                    <h2>Audience</h2>
                    <p>Automated and personalized workflows that cover your needs</p>
                  
                    <div class="custom3-select-audience">
                      <h3>Select Audience</h3>
                      <hr />
                      </div>
                      
                      <div>
                    <button id="custom3PlusButton" class="plus-button" alt="Add">+</button>
                  </div>
                </div>
              </div>
            </div>
            </div>

          </main>
          <div id="addOptionsPanel" class="new-user-panel" style="display: none;">
            <h2>Select Data Entry Method</h2>
            <button id="uploadCSVBtn" class="custom5-button">Upload CSV</button>
            <button id="manualEntryBtn" class="custom5-button">Enter Data Manually</button>
            <button id="cancelAddOptionsBtn" class="cancel-button">Cancel</button>
        </div>
        <div id="uploadCSVPanel" class="new-user-panel" style="display: none;">
          <h2>Upload CSV File</h2>
          <input type="file" id="csvFileInput" accept=".csv" class="custom2-input">
          <button id="uploadCSVSubmitBtn" class="custom5-button">Upload</button>
          <button id="cancelUploadCSVBtn" class="cancel-button">Cancel</button>
      </div>
      
        <div id="manualDataEntryPanel" class="new-user-panel" style="display: none;">
          <h2>Enter User Data</h2>
          <label for="avatar">Avatar (Image URL):</label>
          <input type="text" id="avatar" class="custom2-input" placeholder="URL of avatar image">
          <label for="firstName">First Name:</label>
          <input type="text" id="firstName" class="custom2-input" placeholder="Enter first name">
          <label for="lastName">Last Name:</label>
          <input type="text" id="lastName" class="custom2-input" placeholder="Enter last name">
          <label for="email">Email:</label>
          <input type="email" id="email" class="custom2-input" placeholder="Enter email">
          <button id="saveUserBtn" class="custom5-button">Save User</button>
          <button id="cancelManualEntryBtn" class="cancel-button">Cancel</button>
      </div>
      <div id="overlay" style="display: none;"></div>

    <script src="~/js/Dashboard/dropdown.js"></script>
    <script src="~/js/Dashboard/dates.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/js/Dashboard/buttons.js"></script>
    <script src="~/js/Dashboard/something-else.js"></script>
    <script src="~/js/Dashboard/get-clients.js"></script>
    <script src="~/js/Dashboard/add-client.js"></script>
    <script src="~/js/Dashboard/plus-button.js"></script>
    <script src="~/js/Dashboard_audience/dashboard_audience_panel_buttons.js"></script>
    <script src="~/js/Dashboard_audience/dashboard1.js"></script>
    <script src="~/js/Dashboard_audience/dashboard-users-toggle.js"></script>
  </body>
</html>

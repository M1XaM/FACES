@model FACES.Models.ProjectViewModel


@{
    ViewData["Title"] = "ProjectList";
}

<h2>You are currently on @Model.Project.Name!</h2>

<a asp-action="AddClient" asp-route-projectId="@Model.Project.Id" class="btn btn-primary">Add Client</a>
<a asp-action="ImportClients" class="btn btn-primary">Import Clients</a>

<h3>Clients</h3>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Email</td>
                <td>@client.DateOfBirth.ToShortDateString()</td>
                <td>@client.Gender</td>
            </tr>
        }
    </tbody>
</table>
